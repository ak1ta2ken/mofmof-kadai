<%= form_for(estate) do |f| %>
  <% if estate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(estate.errors.count, "error") %> prohibited this estate from being saved:</h2>

      <ul>
      <% estate.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :'　物件名' %>
    &emsp;<%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :'　賃料' %>
    &emsp;<%= f.number_field :rent %> 円
  </div>

  <div class="field">
    <%= f.label :'　住所' %>
    &emsp;<%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :'　築年数' %>
    &emsp;<%= f.number_field :age %> 年

  <div class="field">
    <%= f.label :'　備考' %>
    &emsp;<%= f.text_area :note %>
  </div>

  <hr>
  <% n = 0 %>
  <%= f.fields_for :stations do |f| %>
    <b><%= "最寄り駅#{n += 1}" %></b>

    <div class="field">
      <%= f.label :'　路線名' %>
      &emsp;<%= f.text_field :line %>
    </div>

    <div class="field">
      <%= f.label :'　駅名' %>
      &emsp;<%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :'　徒歩分数' %>
      &emsp;<%= f.number_field :minute %> 分
    </div>
  <% end %>

  <div class="actions">
    &emsp;<%= f.submit %>
  </div>

<% end %>

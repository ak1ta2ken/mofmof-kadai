<% n = 1 %>
<% @estate.stations.each do |station| %>
  <p><b>最寄り駅<%= n %></b></p>
  <p>&emsp;路線名:<%= station.line %></p>
  <p>&emsp;駅名:<%= station.name %></p>
  <p>&emsp;徒歩分数:<%= station.minute %>分</p>
  <% n += 1 %>
<% end %>

